{
    "name": "OpenLane VLSI Workshop - Complete Setup",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [6080],
    "portsAttributes": {
        "6080": {
            "label": "noVNC Desktop",
            "visibility": "public"
        }
    },
    "postCreateCommand": "bash .devcontainer/setup-workshop.sh",
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-markdown-notebook"
            ]
        }
    }
}
