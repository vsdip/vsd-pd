{
    "name": "OpenLane VLSI Workshop",
    "image": "efabless/openlane:v0.21",
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    "forwardPorts": [6080],
    "portsAttributes": {
        "6080": {
            "label": "noVNC Desktop",
            "visibility": "public"
        }
    },
    "postCreateCommand": "bash .devcontainer/setup-workshop.sh",
    "remoteUser": "openlane"
}
